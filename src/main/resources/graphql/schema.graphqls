directive @specifiedBy(url: String!) on SCALAR

scalar Date
  @specifiedBy(url:
    "https://tools.ietf.org/html/rfc3339"
  )

type Query {
    books: [Book]
    booksByGenre(genre: Genre!): [Book]
    booksByAuthorName(firstName: String, lastName: String!): [Book]

    authors: [Author]

    members: [Member]
}


type Mutation {
    enrollMember(newMember: MemberInput): Member
    loanBook(bookIDs: [ID!]!, memberID: ID!): Loan
}

input MemberInput {
    firstName: String!
    lastName: String!
    birthDate: Date
}

enum Genre {
    THRILLER,
    FICTION,
    NON_FICTION,
    BIBLIOGRAPHY
}

interface Person {
    id: ID!
    firstName: String
    lastName: String!
}

type Member implements Person {
    id: ID!
    firstName: String!
    lastName: String!
    joinDate: Date
    birthDate: Date
    age: Int
}

type Author implements Person {
    id: ID!
    firstName: String
    lastName: String!
    books: [Book]
}

type Book {
    id: ID!
    title: String!
    genre: Genre!
    pageCount: Int!
    author: Author!
}

type Loan {
    id: ID!
    member: Member!
    books: [Book!]!
    startDate: Date
    endDate: Date
}


